<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>面向对象</title>
    <script>
        class Person{
            #name;
            #gender;
            #age;
            hobby() {
                return '我的爱好是玩手机等等'
            }
            speciality() {
                return '我的特长是摆烂与睡大觉'
            }

            constructor(name,gender,age) {
                this.#name = name;
                this.#gender = gender;
                this.#age = age;
            }

            get name() {
                return this.#name;
            }
            get gender() {
                return this.#gender;
            }
            get age() {
                return this.#age;
            }
        }
        let xyy = new Person('夏阳洋', '女', 18);
        console.log(xyy.name);
        console.log(xyy.gender);
        console.log(xyy.age);
        console.log(xyy.hobby());
        console.log(xyy.speciality());
    </script>
</head>
<body>
    
</body>
</html>
